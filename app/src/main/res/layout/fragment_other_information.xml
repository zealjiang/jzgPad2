<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tablelayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:shrinkColumns="1"
        android:stretchColumns="2">

        <TableRow
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center"
                android:text="已填信息"
                android:textColor="@color/white"
                android:paddingTop="@dimen/DIP_10"
                android:paddingBottom="@dimen/DIP_10"
                />
            <View android:layout_width="@dimen/fragment_other_information_view_width"
                android:layout_height="match_parent"
                android:background="@color/global_white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center"
                android:text="实车信息"
                android:textColor="@color/white"
                android:paddingTop="@dimen/DIP_10"
                android:paddingBottom="@dimen/DIP_10"/>
        </TableRow>
        <!--表现里程-->
        <TableRow
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/DIP_180"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/fragment_other_information_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIP_15"
                    android:textColor="#E64600"
                    android:textSize="@dimen/SP_14_L"
                    android:text="仪表与里程" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvShowMileage"
                    fresco:placeholderImage ="@drawable/xiangji"
                    style="@style/otherInfo"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_gray_line" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/etShowMileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:hint="请输入车辆里程表上的全部里程数字"
                    android:text=""
                    android:textSize="@dimen/SP_13_L"
                    android:inputType="number"
                    android:maxLength="6"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/etShowMileage"
                    android:text="公里"
                    android:gravity="center"
                    android:layout_alignTop="@+id/etShowMileage"
                    android:layout_alignBottom="@+id/etShowMileage"
                    android:layout_marginLeft="@dimen/DIP_10"
                    android:textSize="@dimen/SP_15_L"
                    />
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflShowMileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etShowMileage"
                    android:layout_marginTop="@dimen/DIP_8"
                     />
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflShowMileageLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tflShowMileage"
                    android:layout_marginTop="@dimen/DIP_8"
                     />
            </RelativeLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_line" />
        <!--实车颜色-->
        <TableRow
            android:gravity="center"
            android:id="@+id/tabrCarColor"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/fragment_other_information_padding"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIP_15"
                    android:textColor="#E64600"
                    android:text="实车颜色"
                    android:textSize="@dimen/SP_14_L"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvCarColor"
                    fresco:placeholderImage ="@drawable/xiangji"
                    style="@style/otherInfo"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_gray_line" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflCarColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    zhy:max_select="1"
                    />

                <EditText
                    android:id="@+id/etOtherColor"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tflCarColor"
                    android:hint="请填写其他颜色(6个字以内)"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:textSize="@dimen/SP_13_L"
                    android:singleLine="true"
                    android:maxLength="6"
                    />

            </RelativeLayout>

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_line" />
        <!--车身铭牌-->
        <TableRow
            android:gravity="center"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/DIP_180"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIP_15"
                    android:text="车身铭牌"
                    android:textSize="@dimen/SP_14_L"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvCarNameplate"
                    fresco:placeholderImage ="@drawable/xiangji"
                    style="@style/otherInfo"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_gray_line" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflCarNameplate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_line" />
        <!--车架号VIN-->
        <TableRow
            android:gravity="center"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIP_15"
                    android:text="车架号VIN"
                    android:textSize="@dimen/SP_14_L"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvCarVin"
                    fresco:placeholderImage ="@drawable/xiangji"
                    style="@style/otherInfo"
                    />

            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_gray_line" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflCarVin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_line" />
        <!--轮胎规格-->
        <TableRow
            android:gravity="center"
            android:id="@+id/tabrCarTyre"
            >
            <LinearLayout
                android:id="@+id/llCarTyre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/fragment_other_information_padding"
                android:paddingRight="@dimen/fragment_other_information_padding"
                android:paddingLeft="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIP_15"
                    android:text="轮胎规格"
                    android:textSize="@dimen/SP_14_L"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdvCarTyre"
                        android:layout_marginLeft="@dimen/DIP_10"
                        fresco:placeholderImage ="@drawable/xiangji"
                        android:visibility="gone"
                        style="@style/otherInfo"
                        />

                    <TextView
                        android:id="@+id/tvTyre"
                        android:layout_width="@dimen/DIP_200_L"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_gray_line" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflCarTyre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_line" />
        <!--行驶证车辆照片 -->
        <TableRow
            android:gravity="center"
            android:id="@+id/tabrCarLicense"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行驶证车辆照片"
                    android:textSize="@dimen/SP_14_L"
                    android:layout_marginLeft="@dimen/DIP_15"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvCarLicense"
                    fresco:placeholderImage ="@drawable/xiangji"
                    style="@style/otherInfo"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/common_gray_line" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/fragment_other_information_padding"
                android:orientation="horizontal">
                <com.jcpt.jzg.padsystem.widget.tag.TagFlowLayout
                    android:id="@+id/tflCarLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </TableRow>
            <TableRow
                android:gravity="center"
                >
                    <com.jcpt.jzg.padsystem.widget.CustomRippleButton
                        android:id="@+id/crbtnNextStep"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/btn_next_height"
                        android:text="下一步"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_large_18sp"
                        android:background="@drawable/btn_blue_bg"
                        android:gravity="center"
                        zhy:unpressed_color="@color/common_btn_blue"
                        zhy:ripple_color="@color/common_blue_dark"
                        />
            </TableRow>
    </TableLayout>

    </ScrollView>
</LinearLayout>
