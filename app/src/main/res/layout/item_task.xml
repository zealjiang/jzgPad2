<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/DIP_8"
    app:cardCornerRadius="@dimen/DIP_5"
    app:elevation="1dp">

    <LinearLayout
        android:id="@+id/llayout_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/DIP_8"
        android:paddingLeft="@dimen/DIP_16"
        android:paddingRight="@dimen/DIP_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPhingguNo"
                    style="@style/tvTaskClaimList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/DIP_10"
                    android:paddingTop="@dimen/DIP_10" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIP_10"
                    android:paddingTop="@dimen/DIP_10">

                    <TextView
                        android:id="@+id/tvOrderOrganization"
                        style="@style/tvTaskClaimList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOrderTime"
                    style="@style/tvTaskClaimList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="@dimen/DIP_10"
                    android:paddingTop="@dimen/DIP_10" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLinkman"
                        style="@style/tvTaskClaimList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvOrderPhone"
                        style="@style/tvTaskClaimList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIP_10" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOrderAddress"
                    style="@style/tvTaskClaimList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="2"
                    android:gravity="bottom" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_gray_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIP_10">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivCar"
                android:layout_width="@dimen/DIP_120_L"
                android:layout_height="@dimen/DIP_90_L"
                android:scaleType="centerCrop"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/jingzhengu_moren"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@drawable/jingzhengu_moren"
                app:placeholderImageScaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivCar"
                android:layout_alignTop="@+id/ivCar"
                android:layout_marginLeft="@dimen/DIP_10"
                android:layout_toRightOf="@+id/ivCar"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDetectTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_medium_14sp" />

                    <TextView
                        android:id="@+id/tvCarFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/DIP_10"
                        android:layout_toLeftOf="@+id/tvDetectTime"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_medium_14sp" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/DIP_4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvProductType"
                                style="@style/tvTaskClaimList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/DIP_10"
                                android:text="产品类型："
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_medium_14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvPhingguStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="评估中"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_medium_14sp" />

                            <TextView
                                android:id="@+id/tvLookCause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/DIP_5"
                                android:gravity="center"
                                android:text="查看原因"
                                android:textColor="@color/common_blue_dark"
                                android:textSize="@dimen/text_medium_14sp" />
                        </LinearLayout>
                    </LinearLayout>

                        <TextView
                            android:id="@+id/tvVin"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/DIP_20"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_medium_14sp" />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:gravity="bottom|right"
                        android:orientation="horizontal">

                        <com.jcpt.jzg.padsystem.widget.CustomRippleButton
                            android:id="@+id/btn1"
                            android:layout_width="@dimen/DIP_70_L"
                            android:layout_height="@dimen/DIP_36_L"
                            android:layout_marginLeft="@dimen/DIP_4"
                            android:text="退回"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium_14sp"
                            android:visibility="gone"
                            app:ripple_color="@color/colorPrimaryDark"
                            app:round_radius="@dimen/DIP_15"
                            app:unpressed_color="@color/common_orange_light" />

                        <com.jcpt.jzg.padsystem.widget.CustomRippleButton
                            android:id="@+id/btn2"
                            android:layout_width="@dimen/DIP_70_L"
                            android:layout_height="@dimen/DIP_36_L"
                            android:layout_marginLeft="@dimen/DIP_10"
                            android:text="查看报告"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium_14sp"
                            android:visibility="gone"
                            app:ripple_color="@color/colorPrimaryDark"
                            app:round_radius="@dimen/DIP_15"
                            app:unpressed_color="@color/common_theme_blue" />

                        <com.jcpt.jzg.padsystem.widget.CustomRippleButton
                            android:id="@+id/btn3"
                            android:layout_width="@dimen/DIP_70_L"
                            android:layout_height="@dimen/DIP_36_L"
                            android:layout_marginLeft="@dimen/DIP_10"
                            android:text="修改"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium_14sp"
                            android:visibility="gone"
                            app:ripple_color="@color/colorPrimaryDark"
                            app:round_radius="@dimen/DIP_15"
                            app:unpressed_color="@color/common_theme_blue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>