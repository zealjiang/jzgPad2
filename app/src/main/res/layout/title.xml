<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIP_50"
    android:background="@color/black_overlay_11"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/DIP_50"
        android:layout_height="@dimen/DIP_50"
        android:paddingLeft="@dimen/DIP_10"
        android:paddingRight="@dimen/DIP_10"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/global_blue_1"
        android:text="评估结果检查"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/text_large_20sp" />
    <com.jcpt.jzg.padsystem.widget.CustomRippleButton
        android:id="@+id/btnSubmit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/DIP_6"
        android:layout_marginTop="@dimen/DIP_6"
        android:layout_marginBottom="@dimen/DIP_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_blue_bg"
        android:text="提交订单"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_18sp"
        zhy:unpressed_color="@color/common_btn_blue"
        zhy:ripple_color="@color/common_blue_dark"/>
</RelativeLayout>