<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/DIP_8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/DIP_8"
    app:elevation="@dimen/DIP_1"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/DIP_10"
        android:paddingLeft="@dimen/DIP_16"
        android:paddingRight="@dimen/DIP_16"
        android:paddingTop="@dimen/DIP_10">

        <TextView
            android:id="@+id/carName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIP_10"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_16sp"/>

        <LinearLayout
            android:id="@+id/llCarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIP_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIP_10">

                <TextView
                    android:id="@+id/tvFirstCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_blue_bg2"
                    android:text="初检"
                    android:textColor="@color/global_blue_3"
                    android:textSize="@dimen/text_medium_14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvSecondCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_green_bg"
                    android:text="复检"
                    android:textColor="@color/global_green_1"
                    android:textSize="@dimen/text_medium_14sp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_orange_bg"
                android:text="加急"
                android:textColor="@color/global_orange_1"
                android:textSize="@dimen/text_medium_14sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIP_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_medium_14sp"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIP_10"
                    android:text=""
                    android:textSize="@dimen/text_medium_14sp"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIP_10"
                    android:text=""
                    android:textSize="@dimen/text_medium_14sp"/>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/DIP_10"
                    android:textSize="@dimen/text_medium_14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_medium_14sp"/>

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIP_10"
                    android:text=""
                    android:textSize="@dimen/text_medium_14sp"/>

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIP_10"
                    android:text=""
                    android:textSize="@dimen/text_medium_14sp"/>

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="@dimen/DIP_10"
                    android:textSize="@dimen/text_medium_14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/btnClaimTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_blue_bg1"
                    android:text="认领"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium_14sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_14sp"
            android:layout_marginTop="@dimen/DIP_10"
            android:text=""/>
        <TextView
            android:id="@+id/tvDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_14sp"
            android:layout_marginTop="@dimen/DIP_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            android:text=""/>

    </LinearLayout>

</android.support.v7.widget.CardView>