<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIP_45"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/dividerHeight"
        android:layout_height="match_parent"
        android:background="@color/common_gray_line"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/common_bg_gray"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium_16sp"/>

    <View
        android:layout_width="@dimen/dividerHeight"
        android:layout_height="match_parent"
        android:background="@color/common_gray_line"/>

    <com.jcpt.jzg.padsystem.widget.ClearableEditText
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:paddingLeft="@dimen/DIP_6"
        android:paddingRight="@dimen/DIP_6"
        android:singleLine="true"
        android:textColor="@color/common_text_gray_dark"
        android:textSize="@dimen/text_medium_16sp"/>

    <View
        android:layout_width="@dimen/dividerHeight"
        android:layout_height="match_parent"
        android:background="@color/common_gray_line"/>
</LinearLayout>