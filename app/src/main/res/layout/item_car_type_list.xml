<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_click"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIP_25"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIP_13"
        android:textColor="@color/common_theme_blue"
        android:text="2012"
        android:textSize="@dimen/text_medium_16sp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/global_gray_1"/>

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIP_13"
            android:singleLine="true"
            android:text="日产天敕2011款"
            android:textColor="@color/global_black"
            android:textSize="@dimen/SP_14_L"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/DIP_13"
            android:paddingBottom="@dimen/DIP_13"
            android:paddingRight="@dimen/DIP_13"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:text="7.78万元"
            android:textColor="@color/global_orange_1"
            android:textSize="@dimen/SP_13_L"/>
    </LinearLayout>
</LinearLayout>