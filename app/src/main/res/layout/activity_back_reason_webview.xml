<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_gray"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_rootView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIP_50"
        android:background="@color/common_blue_dark"
        >
        <RelativeLayout
            android:id="@+id/rLayoutCheckReportBack"
            android:layout_width="@dimen/DIP_50"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gf_back"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/SP_20_L"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:id="@+id/refresh"
            android:layout_width="@dimen/DIP_60_L"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="@dimen/DIP_40"
                android:layout_height="@dimen/DIP_40"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/refresh_gray" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIP_5"/>
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</LinearLayout>
