<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/DIP_20">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgFlaw"
        android:layout_width="@dimen/DIP_80_L"
        android:layout_height="@dimen/DIP_60_L"
        app:actualImageScaleType="focusCrop"
        app:placeholderImage = "@drawable/xiangji"/>

    <TextView
        android:id="@+id/tvPhotoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIP_10"
        android:textSize="@dimen/text_medium_14sp" />

</RelativeLayout>