<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="请先确认如下信息"
        android:textColor="@color/black_font"
        android:textSize="20sp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/editVin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dialog_white_bg"
        android:digits="0123456789abcdefghjklmnprstuvwxyzABCDEFGHJKLMNPRSTUVWXYZ"
        android:gravity="center"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="17"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/editVin"
        android:layout_marginTop="10dp"
        android:textColor="@color/red1"
        android:textSize="16sp"
        android:text=""
        />

    <TextView
        android:id="@+id/tvDrivingLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvMsg"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:paddingRight="10dp"
        android:text="行驶证识别"
        android:textColor="@color/global_blue_1"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/lyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_bg1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_bg1"
            android:gravity="center"
            android:text="确认并开始检测"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"/>
    </LinearLayout>
</RelativeLayout>