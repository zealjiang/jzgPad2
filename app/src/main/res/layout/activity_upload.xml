<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_gray"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/DIP_180"
        android:layout_marginRight="@dimen/DIP_180"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="文件地址"
            android:textColor="@color/common_theme_blue"
            android:textSize="@dimen/SP_36_L"
             />
        <TextView
            android:id="@+id/txFileMd5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MD5"
            android:textColor="@color/common_theme_blue"
            android:textSize="@dimen/SP_36_L"
             />



        <com.jcpt.jzg.padsystem.widget.CustomRippleButton
            android:id="@+id/btnUpload"
            style="@style/style_common_blue_round_corner_button"
            android:layout_marginTop="@dimen/DIP_20"
            android:text="上传" />

    </LinearLayout>



</RelativeLayout>
